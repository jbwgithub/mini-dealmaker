<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'layouts/errors', obj: @template %>
      <%= form_with(model: @template, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="input-group row mb-3">
          <%= f.label :name, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Please enter a template name" %>
          </div>
        </div>

        <div class="input-group justify-content-center mb-3">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to '[Cancel and return to templates listing]', templates_path, class: "text-primary text-center mb-3" %>
  </div>
</div>
