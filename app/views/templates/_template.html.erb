<div class="container">
  <% @templates.each do |template| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header fst-italic">
            <h4><%= template.name %></h4>
          </div>
          <div class="card-body">
            <p class="card-text">For template info please click View</p>
            <%= link_to "View", template_path(template), class: "btn btn-outline-success" %>
            <% if logged_in? %>
              <%= link_to "Delete", template_path(template), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure you want to delete this template?"} %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(template.created_at) %> ago,
            edited <%= time_ago_in_words(template.updated_at) %> ago </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
