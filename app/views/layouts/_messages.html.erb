<div class="container">
  <% flash.each do |name, msg| %>
    <% if name == "notice" %>
      <% msg_type = "success" %>
    <% else %>
      <% msg_type = "danger" %>
    <% end %>
    <div class="alert alert-<%= msg_type %> alert-dismissible fade show role="alert">
      <%= msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
</div>
